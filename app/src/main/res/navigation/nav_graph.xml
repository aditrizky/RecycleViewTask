<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recycleVIewFragment">

    <fragment
        android:id="@+id/recycleVIewFragment"
        android:name="com.binar.recycleviewsample.RecycleVIewFragment"
        android:label="fragment_recycle_v_iew"
        tools:layout="@layout/fragment_recycle_v_iew" >
        <action
            android:id="@+id/action_recycleVIewFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.binar.recycleviewsample.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="data"
            app:argType="com.binar.recycleviewsample.data.User" />
    </fragment>
</navigation>